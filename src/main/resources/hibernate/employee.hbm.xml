<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.model.Employee" table="employees">
        <id name="id" column="id" type="java.lang.Long">
            <generator class="identity"/>
        </id>
        <property name="firstName" column="first_name" type="java.lang.String"/>
        <property name="lastName" column="last_name" type="java.lang.String"/>
        <property name="departmentId" column="department_id" type="int"/>
        <property name="jobTitle" column="job_title" type="java.lang.String"/>
        <property name="gender" column="gender" type="java.lang.String"/>
        <property name="dateOfBirth" column="date_of_birth" type="java.util.Date"/>
    </class>
</hibernate-mapping>